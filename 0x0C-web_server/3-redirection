#!/usr/bin/env bash
# Script to configure Nginx redirection

# Update package lists
apt-get update -y

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
    apt-get install nginx -y
fi

# Configure Nginx redirection
echo 'server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Additional configuration for your server can go here

}' > /etc/nginx/sites-available/redirect_me

# Create a symbolic link to enable the site
ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Remove default symlink to prevent conflicts
rm -f /etc/nginx/sites-enabled/default

# Restart Nginx to apply changes
service nginx restart
